{
    "name": "gilgal-backend",
    "version": "1.0.0",
    "description": "Gilgal - Open-source PaaS platform for deploying web applications",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "db:migrate": "ts-node src/database/migrations.ts",
        "db:seed": "ts-node src/database/seed.ts",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "axios": "^1.13.2",
        "bcryptjs": "^3.0.3",
        "cors": "^2.8.5",
        "dockerode": "^4.0.9",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.3",
        "pg": "^8.16.3",
        "uuid": "^13.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/dockerode": "^3.3.47",
        "@types/express": "^5.0.6",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^25.0.3",
        "@types/pg": "^8.16.0",
        "@typescript-eslint/eslint-plugin": "^8.51.0",
        "@typescript-eslint/parser": "^8.51.0",
        "eslint": "^9.39.2",
        "prettier": "^3.7.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}
